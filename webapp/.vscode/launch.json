{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Next.js: debug server-side",
        "type": "node-terminal",
        "request": "launch",
        "command": "pnpm run dev",
        "sourceMaps": true,
        "sourceMapPathOverrides": {
          "/turbopack/[project]/*": "${webRoot}/*"
        }
      },
      {
        "name": "Next.js: debug client-side",
        "type": "chrome",
        "request": "launch",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}",
        "sourceMaps": true,
        "sourceMapPathOverrides": {
          "/turbopack/[project]/*": "${webRoot}/*"
        }
      }
    ]
  }
